SET( PATH v1 )
STRING( REPLACE "src/" "" PREFIX "${PATH}" )
STRING( REPLACE "/" "_" PREFIX "${PREFIX}" )

FILE( GLOB ${PREFIX}_SRCS ${PATH}/*.cpp )
FILE( GLOB ${PREFIX}_HEADER ${PATH}/*.h ${PATH}/*.hh )

MY_WRAP_CPP(
	MOC_SRCS
	"${PREFIX}"
	${${PREFIX}_HEADER}
)

SOURCE_GROUP( ${PREFIX} FILES ${${PREFIX}_SRCS} ${${PREFIX}_HEADER} )

SET(
	SRCS
	${SRCS}
	${${PREFIX}_SRCS}
)

SET(
	HEADER
	${HEADER}
	${${PREFIX}_HEADER}
)

INCLUDE( v1/messages/CMakeLists.txt )

