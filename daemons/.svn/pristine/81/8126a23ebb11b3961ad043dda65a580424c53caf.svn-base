SET( PATH src/action )
STRING( REPLACE "src/" "" PREFIX "${PATH}" )
STRING( REPLACE "/" "_" PREFIX "${PREFIX}" )

FILE( GLOB ${PREFIX}_SRCS RELATIVE ${CMAKE_CURRENT_SOURCE_DIR} ${PATH}/*.cpp )
FILE( GLOB ${PREFIX}_HEADER RELATIVE ${CMAKE_CURRENT_SOURCE_DIR} ${PATH}/*.h )


MY_WRAP_CPP(
    ${PREFIX}_MOC_SRCS
    "${PREFIX}"
    ${${PREFIX}_HEADER}
    ${${PREFIX}_PRIVATE_HEADER}
)

SOURCE_GROUP( ${PREFIX} FILES ${${PREFIX}_SRCS} ${${PREFIX}_HEADER} )

SET(
	SRCS
	${SRCS}
	${${PREFIX}_SRCS}
)

SET(
	HEADER
	${HEADER}
	${${PREFIX}_HEADER}
)

SET(
	MOC_SRCS
	${MOC_SRCS}
	${${PREFIX}_MOC_SRCS}
)


